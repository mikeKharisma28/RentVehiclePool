                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="UsedDate" class="control-label"></label>
                <input asp-for="UsedDate" class="form-control" />
                <span asp-validation-for="UsedDate" class="text-danger"></span>
            </div>
            <div class="mb-3" hidden>
                <label asp-for="ReturnedDate" class="control-label"></label>
                <input asp-for="ReturnedDate" class="form-control" type="datetime" value="0001-01-01" />
